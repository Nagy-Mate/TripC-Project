<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trip.App.Views.UpdateTripPage"
             xmlns:viewModel="clr-namespace:Trip.App.ViewModels"
             xmlns:models="clr-namespace:Trip.Data.DbModels;assembly=Trip.Data"
             x:DataType="viewModel:UpdateTripPageViewModel"
             BackgroundColor="#F5F7FA"
             Title="Update Trip">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="25"
                             HorizontalOptions="Center"
                             WidthRequest="380">

            <!-- Cím -->
            <Label Text="Update Trip"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#2D3748"
                   HorizontalTextAlignment="Center"/>

            <!-- Kártyás form -->
            <Frame Padding="20"
                   CornerRadius="20"
                   HasShadow="True"
                   BackgroundColor="White">

                <VerticalStackLayout Spacing="20">

                    <!-- Trip Picker -->
                    <VerticalStackLayout>
                        <Label Text="Select a Trip"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#4A5568"/>
                        <Picker ItemsSource="{Binding Trips}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding SelectedTripForUpdate, Mode=TwoWay}"
                                Title="Choose trip to update"
                                BackgroundColor="#EDF2F7"
                                TextColor="#2D3748"
                                HeightRequest="70"/>
                    </VerticalStackLayout>

                    <!-- Trip Name -->
                    <VerticalStackLayout>
                        <Label Text="Trip Name"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#4A5568"/>
                        <Entry Placeholder="Edit trip name"
                               FontSize="15"
                               TextColor="#2D3748"
                               PlaceholderColor="#A0AEC0"
                               Text="{Binding Name}"
                               BackgroundColor="#EDF2F7"
                               HeightRequest="40"/>
                    </VerticalStackLayout>

                    <!-- Start Date -->
                    <VerticalStackLayout>
                        <Label Text="Start Date"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#4A5568"/>
                        <DatePicker Date="{Binding StartDate}"
                                    Format="yyyy-MM-dd"
                                    BackgroundColor="#EDF2F7"
                                    TextColor="#2D3748"
                                    HeightRequest="40"/>
                    </VerticalStackLayout>

                    <!-- End Date -->
                    <VerticalStackLayout>
                        <Label Text="End Date"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#4A5568"/>
                        <DatePicker Date="{Binding EndDate}"
                                    Format="yyyy-MM-dd"
                                    BackgroundColor="#EDF2F7"
                                    TextColor="#2D3748"
                                    HeightRequest="40"/>
                    </VerticalStackLayout>

                    <!-- Destination Picker -->
                    <VerticalStackLayout>
                        <Label Text="Destination"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#4A5568"/>
                        <Picker ItemsSource="{Binding Destinations}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding SelectedDestination, Mode=TwoWay}"
                                Title="Select new destination"
                                BackgroundColor="#EDF2F7"
                                TextColor="#2D3748"
                                HeightRequest="70"/>
                    </VerticalStackLayout>

                    <!-- Update Button -->
                    <Button Text="Update Trip"
                            Command="{Binding UpdateTripCommand}"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="#38A169"
                            CornerRadius="25"
                            HeightRequest="48"
                            HorizontalOptions="Center"
                            WidthRequest="220"/>

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>