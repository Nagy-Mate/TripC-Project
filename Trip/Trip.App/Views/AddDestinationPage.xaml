<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trip.App.Views.AddDestinationPage"
             xmlns:viewModel="clr-namespace:Trip.App.ViewModels"
             xmlns:models="clr-namespace:Trip.Data.DbModels;assembly=Trip.Data"
             x:DataType="viewModel:AddDestinationPageViewModel"
             BackgroundColor="#F5F7FA"
             Title="Add New Destination">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="25"
                             HorizontalOptions="Center"
                             WidthRequest="380">

            <!-- Cím -->
            <Label Text="Add New Destination"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#2D3748"
                   HorizontalTextAlignment="Center"/>

            <!-- Form kártya -->
            <Frame Padding="20"
                   CornerRadius="20"
                   HasShadow="True"
                   BackgroundColor="White">

                <VerticalStackLayout Spacing="20">

                    <!-- Destination Name -->
                    <VerticalStackLayout>
                        <Label Text="Destination Name"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#4A5568"/>
                        <Entry Placeholder="e.g. Paris"
                               FontSize="15"
                               TextColor="#2D3748"
                               PlaceholderColor="#A0AEC0"
                               Text="{Binding Name}"
                               BackgroundColor="#EDF2F7"
                               HeightRequest="40"/>
                    </VerticalStackLayout>

                    <!-- Country -->
                    <VerticalStackLayout>
                        <Label Text="Country"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#4A5568"/>
                        <Entry Placeholder="e.g. France"
                               FontSize="15"
                               TextColor="#2D3748"
                               PlaceholderColor="#A0AEC0"
                               Text="{Binding Country}"
                               BackgroundColor="#EDF2F7"
                               HeightRequest="40" />
                    </VerticalStackLayout>

                    <!-- Description -->
                    <VerticalStackLayout>
                        <Label Text="Description (optional)"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="#4A5568"/>
                        <Editor Placeholder="Write something about this place..."
                                FontSize="15"
                                AutoSize="TextChanges"
                                TextColor="#2D3748"
                                PlaceholderColor="#A0AEC0"
                                Text="{Binding Description}"
                                BackgroundColor="#EDF2F7"
                                HeightRequest="80"/>
                    </VerticalStackLayout>

                    <!-- Submit button -->
                    <Button Text="Save Destination"
                            Command="{Binding AddDestinationCommand}"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="#3182CE"
                            CornerRadius="25"
                            HeightRequest="48"
                            HorizontalOptions="Center"
                            WidthRequest="220"/>

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>