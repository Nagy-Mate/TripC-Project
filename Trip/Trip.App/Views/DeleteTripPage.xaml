<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trip.App.Views.DeleteTripPage"
             xmlns:viewModel="clr-namespace:Trip.App.ViewModels"
             xmlns:models="clr-namespace:Trip.Data.DbModels;assembly=Trip.Data"
             Title="DeleteTripPage">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="10" HorizontalOptions="Center"  WidthRequest="400">
            <Label Text="Delete Trip" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

            <Border Stroke="White" Padding="5">
                <VerticalStackLayout>
                    <Label Text="Pick a trip for delete:"/>
                    <Picker ItemsSource="{Binding Trips}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedTripForDelete, Mode=TwoWay}" />
                </VerticalStackLayout>
            </Border>

            <Button Text="Submit" 
                WidthRequest="200" 
                HorizontalOptions="Center"
                Command="{Binding DeleteTripCommand}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>