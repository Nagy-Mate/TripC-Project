<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Trip.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Trip.App"
    xmlns:views="clr-namespace:Trip.App.Views"
    Title="Trip.App">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Add Destination"
        ContentTemplate="{DataTemplate views:AddDestinationPage}"
        Route="AddDestinationPage" />

    <ShellContent
        Title="Add Trip"
        ContentTemplate="{DataTemplate views:AddTripPage}"
        Route="AddTripPage" />

    <ShellContent
        Title="Update Trip"
        ContentTemplate="{DataTemplate views:UpdateTripPage}"
        Route="UpdateTripPage" />

    <ShellContent
        Title="Delete Trip"
        ContentTemplate="{DataTemplate views:DeleteTripPage}"
        Route="DeleteTripPage" />

</Shell>